<div class="search-container"> 
    <div class="search-bar-box">
        <form>
            <input type="text" name="search" placeholder="Search..." autocomplete="off">
        </form>
        <div class="suggestion hidden">
            <ul>
                <li>dammy1</li>
                <li>dammy2</li>
                <li>dammy3</li>
                <li>dammy4</li>
                <li>dammy5</li>
                <li>dammy6</li>
                <li>dammy7</li>
                <li>dammy8</li>
            </ul>
        </div>
    </div>  
</div>

<style>
    .search-container {
        width: 100%;
        height: 100%;
        min-height: 20vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .search-bar-box {
        border: 1px solid transparent;
        box-shadow: 0px 0px 1px;
        border-radius: 10px;
    }

    input {
        width: 60vw;
        height: 28px;
        border-radius: 10px;
        border: 1px solid transparent;
        box-shadow: 0px 0px 1px;
    }

    .suggestion ul li {
        padding: 2px 10px;
    }

    .hidden {
        display: none;
    }

</style>

<script>
    const searchBar = document.querySelector('input') as HTMLInputElement
    const suggestion = document.querySelector('.suggestion') as HTMLDivElement
    let isActive = false
    
    if (searchBar) {
        searchBar.addEventListener('focus', () => {
            isActive = true
            suggestion.classList.remove('hidden')
        })
        searchBar.addEventListener('blur', () => {
            isActive = false
            suggestion.classList.add('hidden')
        })
    }

</script>